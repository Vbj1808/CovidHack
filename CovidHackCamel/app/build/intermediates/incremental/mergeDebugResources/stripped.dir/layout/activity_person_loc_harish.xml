<?xml version="1.0" encoding="utf-8"?>



                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.harish_activities.PersonLocAct" android:tag="layout/activity_person_loc_harish_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="ALERT!!"
                    android:paddingLeft="95dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/infectedLabel"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/head"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:text="Are you infected by covid? " />

                <CheckBox
                    android:id="@+id/infectedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/infectedLabel"
                    android:padding="20dp" />


                <TextView
                    android:id="@+id/pushLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/infectedLabel"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:text="Set your location history as public" />

                <CheckBox
                    android:id="@+id/pushBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/infectedLabel"
                    android:layout_toRightOf="@+id/pushLabel"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/share"
                    style="@style/Widget.AppCompat.Button.Colored"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pushLabel"
                    android:layout_centerInParent="true"
                    android:text="Publish" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
         