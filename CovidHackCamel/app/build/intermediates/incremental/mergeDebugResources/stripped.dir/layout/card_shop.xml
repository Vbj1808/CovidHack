<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                 
                     
                                                                                 
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/card_shop_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"

            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/yellow"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:tag="binding_1"      
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/shopId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tag="binding_2"    
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Address           =   "
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_below="@+id/shopTypeLabel" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopTypeLabel"
                    android:layout_toRightOf="@+id/addressLabel"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:tag="binding_3"   />

                <TextView
                    android:id="@+id/shopTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      Shop Type   =   "
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:layout_below="@+id/shopName" />

                <TextView
                    android:id="@+id/shopTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shopName"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/shopTypeLabel"
                    android:tag="binding_4"   />


                <Button
                    android:id="@+id/shopHere"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_below="@id/addressText"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/newbutton"
                    android:text="Shop"
                    android:textSize="17dp"
                    android:backgroundTint="#ebebeb"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
         