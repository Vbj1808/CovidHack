<?xml version="1.0" encoding="utf-8"?>
                                                                   

    
                 
                     
                                                                                        
           


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/card_covid_stats_0" xmlns:android="http://schemas.android.com/apk/res/android">



        <androidx.cardview.widget.CardView
            android:id="@+id/statsCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_stats_bkg">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/green_ball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/green_ball"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/recoveredCasesText2"
                        android:layout_marginTop="4dp"
                        android:textColor="#201C1C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_1"       
                        android:layout_weight=".5"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_marginStart="5dp"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/yellow_ball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yellow_ball"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/someCases"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_2"         
                        android:textColor="#201C1C"
                        android:layout_weight=".5"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_marginStart="5dp"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/red_ball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/red_ball"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/activeCasesText2"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_3"    
                        android:textColor="#201C1C"
                        android:layout_weight=".5"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout3"
                    android:tag="binding_4"      
                    android:textColor="#090909"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


         