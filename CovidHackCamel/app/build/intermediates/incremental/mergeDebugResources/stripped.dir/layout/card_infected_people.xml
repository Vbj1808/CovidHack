<?xml version="1.0" encoding="utf-8"?>

                                                              

    
                 
                     
                                                                                           
           

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:tag="layout/card_infected_people_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            android:id="@+id/infectedPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            card_view:cardCornerRadius="20dp"

            card_view:cardBackgroundColor="#883799"
            android:clipToPadding="false"
            android:elevation="5dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_1"         
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:layout_margin="10dp"
                    android:textSize="24dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:padding="10dp"
                    android:tag="binding_2"  
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
         