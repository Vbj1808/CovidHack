<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                              

        
                     
                         
                                                                                      
               

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="6dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:clipToPadding="false"
        android:id="@+id/ordercard"
        android:background="@color/white"
        android:elevation="5dp"
         android:tag="layout/card_order_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:id="@+id/vertical_covid_stats"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/custName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:tag="binding_1"      
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/custIdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      Customer ID   =   "
                        android:textColor="#ff0000"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_below="@+id/custName" />

                    <TextView
                        android:id="@+id/custIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/custName"
                        android:layout_toRightOf="@+id/custIdLabel"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:tag="binding_2"     />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderIdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      Order ID   =   "
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_below="@+id/custIdLabel" />

                    <TextView
                        android:id="@+id/orderIdText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/custIdLabel"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/orderIdLabel"
                        android:tag="binding_3"      />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

         
