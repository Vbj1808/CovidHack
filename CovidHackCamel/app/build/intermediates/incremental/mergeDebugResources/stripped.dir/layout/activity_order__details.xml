<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e3e3e3"
    tools:context=".activities.clement_activities.Order_Details">

    <TextView
        android:id="@+id/dop"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:paddingRight="10dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/orderid"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:text="Order_ID"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:text="Order-Details"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customer"
        android:layout_width="159dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:text="Customer Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderid" />

    <TextView
        android:id="@+id/custname"
        android:layout_width="151dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/customer"
        app:layout_constraintTop_toBottomOf="@+id/dop" />

    <Button
        android:id="@+id/viewcart"
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/newbutton"
        android:backgroundTint="#ebebeb"
        android:text="View Cart"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/rejectorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custname"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rejectorder"
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/newbutton"
        android:backgroundTint="#ebebeb"
        android:text="Reject Order"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/deliverorder"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewcart" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="121dp"
        android:layout_height="97dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:srcCompat="@drawable/orders" />

    <Button
        android:layout_width="137dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/newbutton"
        android:backgroundTint="#ebebeb"
        android:id="@+id/deliverorder"
        app:layout_constraintTop_toBottomOf="@+id/rejectorder"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:visibility="gone"
        android:text="Reject Order"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>