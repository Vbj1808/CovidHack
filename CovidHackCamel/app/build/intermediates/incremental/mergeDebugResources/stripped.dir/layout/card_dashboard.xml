        <RelativeLayout
            android:id="@+id/dashboardCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/card_dashboard_img" android:tag="layout/card_dashboard_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardImage"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Smith"
                android:fontFamily="@font/exotc350bdbtbold"
                android:textStyle="bold" />

        </RelativeLayout>
